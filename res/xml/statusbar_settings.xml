<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/additional_settings_qs_statusbar_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <!-- Quick Settings Pulldown -->
        <ListPreference
            android:key="quick_pulldown"
            android:title="@string/title_quick_pulldown"
            android:summary="@string/qs_pulldown_summary"
            android:entries="@array/quick_pulldown_entries"
            android:entryValues="@array/quick_pulldown_values"
            android:persistent="false" />
            
            
        <!-- Smart Pulldown -->    
        <ListPreference
            android:key="smart_pulldown"
            android:title="@string/smart_pulldown_title"
            android:entries="@array/smart_pulldown_entries"
            android:entryValues="@array/smart_pulldown_values"
            android:persistent="false" />
            
        <!-- Network usage stats -->
        <PreferenceScreen
            android:key="network_usage_stats"
            android:fragment="com.android.settings.AOSPAL.NetworkUsageStats"
            android:title="@string/status_bar_network_cat"
            android:summary="@string/statusbar_network_summary" /> 
            
        <!-- Custom clock and date -->    
        <PreferenceScreen
            android:fragment="com.android.settings.slim.StatusBarClockStyle"
            android:key="clock_style_pref"
            android:title="@string/status_bar_clock" />
            
        <!--Custom Carrier Label-->
        <com.android.settings.AOSPAL.CustomCarrier
            android:key="notification_custom_carrier_label"
            android:title="@string/notification_custom_carrier_label_title"
            android:dialogTitle="@string/notification_custom_carrier_label_title"
            android:positiveButtonText="@string/wifi_save"
            android:negativeButtonText="@string/wifi_cancel"
            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:persistent="false" />
            
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="double_tap_sleep_gesture"
            android:title="@string/status_bar_double_tap_to_sleep_title" />
            
        <CheckBoxPreference
            android:key="status_bar_brightness_control"
            android:title="@string/status_bar_toggle_brightness"
            android:summary="@string/status_bar_toggle_brightness_summary"
            android:defaultValue="false" />
            
		<CheckBoxPreference
            android:key="noti_reminder_enabled"
            android:title="@string/noti_reminder_enable_title"
            android:summaryOn="@string/enabled"
            android:summaryOff="@string/disabled"
            android:defaultValue="false" />

        <ListPreference
            android:key="noti_reminder_sound"
            android:defaultValue="0"
            android:title="@string/noti_reminder_sound_title"
            android:entries="@array/noti_reminder_sound_entries"
            android:entryValues="@array/noti_reminder_sound_values"
            android:dependency="noti_reminder_enabled" />

        <RingtonePreference
            android:key="noti_reminder_ringtone"
            android:title="@string/noti_reminder_ringtone"
            android:ringtoneType="all"
            android:showSilent="false"
            android:dependency="noti_reminder_enabled" />     
            
        <PreferenceScreen
			android:key="notification_drawer"
			android:fragment="com.android.settings.slim.NotificationDrawerSettings"
			android:title="@string/notification_drawer_title" />    
</PreferenceScreen>   
